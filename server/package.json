{
  "name": "server",
  "version": "1.0.0",
  "description": "Node GraphQL Server",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register -P ./tsconfig.json ./server.ts",
    "build": "shx rm -rf ../build/server && webpack --mode production && shx cp schema.graphql ../build/server && shx cp ../.env ../build",
    "start": "node ../build/server/server.js",
    "build-ts": "tsc && shx cp schema.graphql ./dev/server",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/mongoose": "^5.3.8",
    "apollo-server-express": "^2.3.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "graphql-playground": "^1.3.17",
    "graphql-tools": "^4.0.3",
    "mongoose": "^5.4.5",
    "typescript": "^3.2.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/lodash": "^4.14.120",
    "@types/graphql": "^14.0.5",
    "@types/node": "^10.12.18",
    "bufferutil": "^4.0.1",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "graphql-playground-middleware-express": "^1.7.8",
    "nodemon": "^1.18.9",
    "shx": "^0.3.2",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.12.1",
    "utf-8-validate": "^5.0.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  }
}
